platform :ios, '12.0'

# Flutter projenizin yolu
flutter_application_path = File.dirname(File.dirname(`pwd`))

# Flutter tarafından sağlanan podhelper.rb dosyasını yükleyin
load File.join(flutter_application_path, '.ios', 'Flutter', 'podhelper.rb')

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # Flutter bağımlılıklarını yükle
  install_all_flutter_pods(flutter_application_path)
end
